<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".photo_Gallery">
<ImageView
    android:id="@+id/imageView1"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="350dp"
    android:layout_height="350dp"/>
    <Button
        android:onClick="btn_Pick_Photo"
        android:id="@+id/Gallery"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Gallery"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="@+id/imageView1"
        app:layout_constraintEnd_toEndOf="@+id/imageView1"
        app:layout_constraintStart_toStartOf="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="50dp"
         />
    <Button
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="@+id/Gallery"
        app:layout_constraintEnd_toEndOf="@+id/Gallery"
        app:layout_constraintStart_toStartOf="@+id/Gallery"
        android:id="@+id/btn_ShareImage"
        android:onClick="btn_ShareImage"
        android:drawableLeft="@android:drawable/ic_menu_report_image"
        android:text="Share Image"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>